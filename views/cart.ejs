        <%for (var i = productsData.productsInCart.length - 1; i >= 0; i--) {%>
        <div class="order-card">
          <div class="order-card-header">
            <div class="header-part-1 mg-x-1">
              <h4>Product In cart from</h4>
              <h4><%= productsData.productsInCart[i].estimatedDelivaryDate%></h4>
            </div>
            <div class="header-part-2 mg-x-1">
              <h4>TOTAL</h4>
              <h4><%= productsData.productsInCart[i].price%></h4>
            </div>
            <div class="header-part-3 mg-x-1">
              <h4>SHIP TO</h4>
              <h5><%= productsData.username%></h5>
            </div>
          </div>
          <div class="order-card-tail">
            <div class="order-description">
              <h4>Not Yet Ordered</h4>
              <div class="product-description">
                <img src="<%= productsData.productsInCart[i].productImage%>" alt="" />
                <p><%= productsData.productsInCart[i].productDescription%></p>
              </div>
            </div>
